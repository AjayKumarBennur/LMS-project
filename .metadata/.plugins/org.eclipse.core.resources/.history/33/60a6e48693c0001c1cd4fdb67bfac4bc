package com.ajay.lms.service;

import java.util.Optional;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.stereotype.Service;

import com.ajay.lms.dao.AdminRepo;
import com.ajay.lms.pojo.BatchDetails;

@Service
public class AdminServiceImpl implements AdminService {

	@Autowired
	private AdminRepo repo;

	@Override
	public BatchDetails addBatch(BatchDetails details) {
		return repo.save(details);
	}

	@Override
	public BatchDetails update(BatchDetails details,int id) {
		Optional<BatchDetails> existing = repo.findById(id);
		existing.get().setBatchName(details.getBatchName());
		existing.get().setMentorName(details.getMentorName());
		existing.get().setStartDate(details.getStartDate());
		existing.get().setEndDate(details.getEndDate());
		existing.get().setStatus(details.getStatus());
		existing.get().setNumber(details.getNumber());
		return repo.save(existing.get());
		
	}

	@Override
	public boolean delete(Integer id) {
		repo.deleteById(id);
	}

}
